<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="io.github.mklkj.filmowy.ui.film.FilmViewModel" />

        <variable
            name="film"
            type="io.github.mklkj.filmowy.api.pojo.Film" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@{`Tytuł: ` + film.title + `, oryginalny: ` + film.filmInfo.originalTitle}"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            tools:text="Tytuł"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{`Ocena: ` + Double.toString(film.avgRate)}"
            android:layout_marginBottom="10dp"
            tools:text="Ocena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{`Liczba głosów: ` + Integer.toString(film.votesCount)}"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            tools:text="Liczba głosów"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{`Rok: ` + Integer.toString(film.year)}"
            android:layout_marginBottom="10dp"
            tools:text="Rok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{`Czas trwania: ` + Integer.toString(film.duration)}"
            android:layout_marginBottom="10dp"
            tools:text="Czas trwania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{`Synopis: ` + film.filmInfo.synopsis}"
            android:layout_marginBottom="10dp"
            tools:text="Synopis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:filmImage="@{film.imagePath}"
            android:imageWidth="@{500}"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </LinearLayout>
</layout>
