<layout>

    <data>

        <import type="io.github.mklkj.filmowy.api.NetworkState" />

        <variable
            name="article"
            type="io.github.mklkj.filmowy.api.pojo.News" />

        <variable
            name="viewModel"
            type="io.github.mklkj.filmowy.ui.article.ArticleViewModel" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/articleImage"
                android:newsImage="@{article.newsImageUrl}"
                android:imageWidth="@{640}"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                tools:ignore="ContentDescription"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:text="@{article.title}"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:text="@{article.publicationTime}"
                android:format='@{"yyyy-MM-dd HH:mm"}'
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/date/ddmmyy" />

            <TextView
                android:text="@{article.author}"
                android:visibility="@{article.source != null}"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:text="@{article.source}"
                android:visibility="@{article.source != null}"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:text="@{article.content}"
                android:lineSpacingMultiplier="1.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                tools:text="@tools:sample/lorem" />

            <ProgressBar
                android:visibility="@{viewModel.networkState == NetworkState.LOADING}"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@{viewModel.networkState.message}"
                android:visibility="@{viewModel.networkState.message != null}"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</layout>
